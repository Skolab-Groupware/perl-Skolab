use strict;
use Skolab;
use IO::File;

Skolab::reloadConfig("@CONFIG_DIR@/skolab.globals");

my $imap_conf = "$Skolab::config{'imap_confdir'}/imapd.conf";

my $file;
if (!($file = IO::File->new($imap_conf, 'r'))) {
    Skolab::log('T', "Unable to open IMAP configuration file `$imap_conf': $!", SKOLAB_ERROR);
    # Error, use default partition
    print "\n";
    exit(1);
}

while (<$file>) {
    if (/^\s*partition-(\w+):/) {
        print "$1\n";
    }
}
$file->close;

exit(0);
